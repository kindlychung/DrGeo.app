| sketch build |sketch := DrGeoCanvas new fullscreen .sketch centerTo: 1@0; scale: 200.build := [  ].build := [ :triangle :depth| | vertrices middles nextTriangles|	depth > 0 ifTrue: [ 		World doOneCycle.		(10 milliSecond  ) wait.		vertrices := triangle mathItem points.		middles := vertrices withIndexCollect: [:point : index | point + (vertrices atWrap: index + 1) / 2 ].		sketch domain deleteMathItem: triangle mathItem.		nextTriangles := OrderedCollection new.		nextTriangles 			add: (sketch polygon: {vertrices  first.  middles first. middles third });			add: (sketch polygon: {middles first. vertrices second. middles second});			add: (sketch polygon: {middles third. middles second. vertrices third}).		nextTriangles do: [ :aTriangle | build value: aTriangle value: depth - 1]	] ].build 	value: (sketch polygon: { 0 @3 sqrt. 1@0 . -1@0})	value: 6.sketch.